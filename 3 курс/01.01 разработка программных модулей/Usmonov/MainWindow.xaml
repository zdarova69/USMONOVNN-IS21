<Window x:Class="Usmonov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Usmonov"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="450" MinWidth="800">
    <Grid ShowGridLines="True" Background="Teal">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.ColumnSpan="2" Grid.RowSpan="1" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Width="100" Height="100"                  
                   Foreground="red"
                   Grid.Row="1">Пример</TextBlock>
        <TextBlock Width="100" Height="100"
                   Foreground="red"
                   Grid.Row="1">rwqfe</TextBlock>
        </StackPanel>
        
        <Image Grid.Column="1" Source="resource/котик.jpg"/>
    </Grid>
</Window>
